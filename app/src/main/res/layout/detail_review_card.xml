<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/card_radius"
    app:elevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="false"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_margin="@dimen/card_side_margin"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_inner_layout_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_author"
            style="@style/CardViewAuthor"
            android:layout_marginBottom="@dimen/card_inner_layout_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_content"
            android:maxLines="@integer/nb_max_lines"
            android:ellipsize="end"
            style="@style/BodyText"
            android:textSize="@dimen/cardview_text_size"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/card_inner_layout_margin" />

    </LinearLayout>

</android.support.v7.widget.CardView>