<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/big_img"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/big_poster_bottom_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_movie_poster_detail"
                android:layout_marginLeft="@dimen/movie_title_left_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/movie_title"
                    style="@style/MovieTitle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/movie_title_left_margin">
                    <ImageView
                        android:layout_width="@dimen/movie_rating_star_size"
                        android:layout_height="@dimen/movie_rating_star_size"
                        android:id="@+id/star_1"/>
                    <ImageView
                        android:layout_width="@dimen/movie_rating_star_size"
                        android:layout_height="@dimen/movie_rating_star_size"
                        android:id="@+id/star_2"/>
                    <ImageView
                        android:layout_width="@dimen/movie_rating_star_size"
                        android:layout_height="@dimen/movie_rating_star_size"
                        android:id="@+id/star_3"/>
                    <ImageView
                        android:layout_width="@dimen/movie_rating_star_size"
                        android:layout_height="@dimen/movie_rating_star_size"
                        android:id="@+id/star_4"/>
                    <ImageView
                        android:layout_width="@dimen/movie_rating_star_size"
                        android:layout_height="@dimen/movie_rating_star_size"
                        android:id="@+id/star_5"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
    
    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/movie_title_right_margin"
        android:layout_marginLeft="@dimen/movie_title_left_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/release_date_tl"
            style="@style/BodyText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/release_date"
            android:layout_marginLeft="@dimen/detail_fragment_text_left_margin"
            style="@style/BodyText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/movie_title_left_margin"
        android:layout_marginRight="@dimen/movie_title_right_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/rating_tl"
            style="@style/BodyText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:layout_marginLeft="@dimen/detail_fragment_text_left_margin"
            style="@style/BodyText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/movie_title_left_margin"
        android:layout_marginRight="@dimen/movie_title_right_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/synopsis_tl"
            style="@style/BodyText"
            android:gravity="left|top"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/detail_fragment_text_left_margin"
            android:id="@+id/synopsis"
            style="@style/BodyText"/>
    </LinearLayout>

</LinearLayout>